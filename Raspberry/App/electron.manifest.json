{
  "executable": "App",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "cs2invest",
  "description": "Desktop client app for CS 2 Invest",
  "author": "Mateusz Lapies",
  "singleInstance": true,
  "environment": "Production",
  "build": {
	"target": "snap",
	"base": "core22",
	"plugs": [
       "wayland",
	   "network"
	],
    "appId": "com.App.app",
    "productName": "App",
    "copyright": "Copyright Â© 2023",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}